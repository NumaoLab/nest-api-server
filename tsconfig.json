{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "types": ["react", "jest", "node"],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["server", "client"],
  "exclude": ["node_modules", "dist", "test", "**/*.spec.ts", "webpack"]
}
