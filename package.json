{
  "name": "nest-api-server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist && rm -rf public && yarn client:build:prod && yarn server:build:prod",
    "start:prod": "node dist/server",
    "client:start:dev": "webpack-dev-server --config webpack/client/webpack.config.dev.js",
    "client:build:prod": "webpack --config webpack/client/webpack.config.prod.js",
    "server:build:dev": "webpack --config webpack/server/webpack.config.dev.js",
    "server:build:prod": "webpack --config webpack/server/webpack.config.prod.js",
    "server:start:dev": "yarn server:build:dev --watch & nodemon dist/server",
    "start:dev": "yarn server:build:dev && run-p server:start:dev client:start:dev",
    "lint:server": "eslint server --ext .ts",
    "lint:client": "eslint client/src --ext .ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@grpc/proto-loader": "^0.5.1",
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/microservices": "^6.5.3",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/platform-socket.io": "^6.9.0",
    "@nestjs/serve-static": "^1.0.1",
    "@nestjs/swagger": "^3.1.0",
    "@nestjs/websockets": "^6.9.0",
    "axios": "^0.19.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.0",
    "date-fns": "^2.4.1",
    "google-protobuf": "^3.9.0",
    "grpc": "^1.23.2",
    "merge": "^1.2.1",
    "mongo": "^0.1.0",
    "mongoose": "^5.7.5",
    "path": "^0.12.7",
    "protobufjs": "^6.8.8",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "source-map-loader": "^0.2.4",
    "styled-components": "^4.4.1",
    "swagger-ui-express": "^4.0.7",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  },
  "devDependencies": {
    "@nestjs/testing": "6.1.1",
    "@types/axios": "^0.14.0",
    "@types/express": "4.16.1",
    "@types/jest": "^24.0.18",
    "@types/mongoose": "^5.5.9",
    "@types/node": "11.13.4",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "@types/socket.io": "^2.1.4",
    "@types/styled-components": "^4.4.0",
    "@types/supertest": "2.0.7",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-polyfill": "^6.26.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-jest": "^23.0.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.16.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "24.7.1",
    "nodemon": "^1.19.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-loader": "^6.2.0",
    "ts-node": "8.1.0",
    "tsc-watch": "2.2.1",
    "tsconfig-paths": "3.8.0",
    "typescript": "3.4.3",
    "webpack-dev-server": "^3.9.0",
    "webpack-hot-middleware": "^2.25.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}